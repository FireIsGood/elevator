---
import { SEO } from "astro-seo";
export interface Props {
  title: string;
  noScroll?: boolean;
  smoothScroll?: boolean;
}

const { title, noScroll, smoothScroll } = Astro.props;
const bodyClasses = [noScroll ? "no-scroll" : ""].join(" ");
---

<!DOCTYPE html>
<html lang="en" class={smoothScroll ? "smooth-scroll" : ""}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/elevator/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO title={title} description="Elevator showcase site" />
  </head>
  <body class={bodyClasses}>
    <main>
      <slot />
    </main>
    <style is:global lang="scss">
      :root {
        --lightblue-50: #e1f5fe;
        --lightblue-100: #b3e5fc;
        --lightblue-200: #81d4fa;
        --lightblue-300: #4fc3f7;
        --lightblue-400: #29b6f6;
        --lightblue-500: #03a9f4;
        --lightblue-600: #039be5;
        --lightblue-700: #0288d1;
        --lightblue-800: #0277bd;
        --lightblue-900: #01579b;

        --green-50: #e8f5e9;
        --green-100: #c8e6c9;
        --green-200: #a5d6a7;
        --green-300: #81c784;
        --green-400: #66bb6a;
        --green-500: #4caf50;
        --green-600: #43a047;
        --green-700: #388e3c;
        --green-800: #2e7d32;
        --green-900: #1b5e20;

        --main-bg: var(--lightblue-50);
      }

      // General Styles

      html {
        font-family: system-ui, sans-serif;
        background-color: #f6f6f6;
        touch-action: none;
      }
      body {
        margin: 0;
      }
      * {
        margin: 0;
        box-sizing: border-box;
      }

      code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
          DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
      }
      ul {
        padding-left: 0;
        padding: 1rem;
        list-style: none;
      }

      // Reset button

      button {
        font-family: inherit;
        font-size: inherit;
        background-color: transparent;
        border: none;
        padding: 0;
        cursor: pointer;
        touch-action: none;
      }

      // Webkit Scrollbar

      *::-webkit-scrollbar {
        background-color: hsl(0, 0%, 93%);
        width: 0.75rem;
      }
      *::-webkit-scrollbar-thumb {
        background-color: hsl(0, 0%, 73%);
      }
    </style>
    <style lang="scss">
      main {
        background-color: var(--main-bg);
      }
      .no-scroll {
        overflow-y: hidden;
      }
      .smooth-scroll {
        scroll-behavior: smooth;
      }
    </style>
  </body>
</html>
